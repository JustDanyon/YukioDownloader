{
    "version": 2,
    "builds": [
      {
        "src": "api/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/",
        "dest": "/public/index.html"
      },
      {
        "src": "/api/search",
        "dest": "/api/search.js"
      },
      {
        "src": "/api/episodes/(.*)",
        "dest": "/api/episodes.js?id=$1"
      },
      {
        "src": "/api/download/(.*)",
        "dest": "/api/download.js?id=$1"
      },
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ]
  }